# Atlassian
ATLASSIAN_BASE_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=you@example.com
ATLASSIAN_API_TOKEN=
JIRA_PROJECT_KEY=
CONFLUENCE_SPACE_KEY=

# Trello
TRELLO_API_KEY=
TRELLO_TOKEN=
TRELLO_BOARD_ID=

# GitHub / GitLab
GITHUB_TOKEN=
GITLAB_TOKEN=
GITLAB_BASE_URL=https://gitlab.com

# Search
BRAVE_SEARCH_API_KEY=
DUCKDUCKGO_REGION=wt-wt

# Postgres
DATABASE_URL=postgresql://user:password@localhost:5432/app
POSTGRES_SSLMODE=prefer

# Filesystem MCP root
FILESYSTEM_ROOT=/workspace/AI-stack

# AWS (optional)
AWS_PROFILE=default
AWS_REGION=us-east-1

# MCP command placeholders used by opencode.json
MCP_ATLASSIAN_COMMAND=npx
MCP_ATLASSIAN_ARGS=-y mcp-atlassian
MCP_TRELLO_COMMAND=npx
MCP_TRELLO_ARGS=-y mcp-trello
MCP_GITHUB_COMMAND=npx
MCP_GITHUB_ARGS=-y @modelcontextprotocol/server-github
MCP_GITLAB_COMMAND=npx
MCP_GITLAB_ARGS=-y mcp-server-gitlab
MCP_FILESYSTEM_COMMAND=npx
MCP_FILESYSTEM_ARGS=-y @modelcontextprotocol/server-filesystem
MCP_WEB_SEARCH_COMMAND=npx
MCP_WEB_SEARCH_ARGS=-y mcp-server-brave-search
MCP_POSTGRES_COMMAND=npx
MCP_POSTGRES_ARGS=-y @modelcontextprotocol/server-postgres
MCP_AWS_COMMAND=npx
MCP_AWS_ARGS=-y mcp-server-aws
